{
  "extends": "@vue/tsconfig/tsconfig.node.json",
  "include": [
    "env.d.ts",
    "node_modules/@apollo/*.ts",
    "src/background/**/*",
    "src/gateway/client_apollo.ts",
    "src/gateway/schema.ts"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "moduleResolution": "NodeNext",
    "composite": true,
    "baseUrl": ".",
    "module": "CommonJS",
    "preserveValueImports": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist_background/",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  }
}
